<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,10,10,10" Grid.ColumnSpan="2" Background="#FF847A7A">
            <TextBlock Text="Введите стоимость покупки:"/>
            <TextBox x:Name="purchaseTextBox" Margin="0,0,0,10" Width="200"/>

            <Button Content="Добавить покупку" Click="AddPurchase_Click" Margin="0,0,0,10" Background="#FF5AAB57"/>
            <TextBlock Text="Общая сумма:" FontFamily="Segoe UI Semibold"/>
            <TextBlock x:Name="totalAmountTextBlock" FontWeight="Bold" FontSize="16" Height="70" RenderTransformOrigin="-0.052,2.4" Width="340" Foreground="#FFA50B0B" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
